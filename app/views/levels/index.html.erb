<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= t('levels.index.title') %></h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @levels.each do |level| %>
      <%= link_to level_path(level), class: "block p-6 bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-50 transition" do %>
        <h2 class="text-xl font-semibold mb-2"><%= t('levels.index.level') %> <%= level.number %>: <%= level.title %></h2>
        <p class="text-gray-600"><%= level.description %></p>
      <% end %>
    <% end %>
  </div>
</div>
